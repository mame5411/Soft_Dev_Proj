<% include ../partials/header %>
<% include ../partials/menu %>
	
	<body style="background-color:#EDF2F2;">

	<div class= "container">
		<h1 class = "heading">Profile</h1>

		<div class= "data-form">
			<div class = "form">
				<form class = "login-form">
					
					<h3>Personal Information</h3>
					<input class = "input" type = "text" placeholder = "First Name" value="<%-data[0].first_name%>">
					<input class = "input" type = "text" placeholder = "Middle Initial" value="<%-data[0].middle_init%>">
					<input class = "input" type = "text" placeholder = "Last Name" value="<%-data[0].last_name%>">
					<textarea class = "input" type = "text" placeholder = "Short Bio"></textarea>
					<hr>
					
					<h3>Contact Information</h3>
					<input class = "input" type = "text" placeholder = "Phone Number" value="<%-data[0].phone%>">
					<input class = "input" type = "text" placeholder = "Email" value="<%-data[0].email%>">
					<input class = "input" type = "text" placeholder = "Address" value="<%-data[0].addr%>">
					<input class = "input" type = "text" placeholder = "City" value="<%-data[0].city%>">
					<input class = "input" type = "text" placeholder = "State" value="<%-data[0].ste%>">
					<input class = "input" type = "text" placeholder = "Zip Code" value="<%-data[0].zip%>">
					<hr>
					
					<h3>Education</h3>
					
					<div class="tab-button-container">
						<button id="education-button-1" type="button" class="tab-button active" onclick="change_education(1);">Education History 1</button>
						<button id="education-button-2" type="button" class="tab-button" onclick="change_education(2);">Education History 2</button>
						<button id="education-button-3" type="button" class="tab-button" onclick="change_education(3);">Education History 3</button>
						<button id="education-button-4" type="button" class="tab-button" onclick="change_education(4);">Program Highlights</button>
					</div>
					
					<div id="education-history-1" style="display:block;">
						<h4>Education History (1)</h4>
						<input class = "input" type = "text" placeholder = "School Name" value="<%-data[0].edschool[0]%>">
						<input class = "input" type = "text" placeholder = "Grade Point Average" value="<%-data[0].edgpa[0]%>">
						<input class = "input" type = "date" placeholder = "Graduation Date" value="<%-new Date(data[0].edgrad[0])%>">
						<hr>
					</div>
					
					<div id="education-history-2" style="display:none;">
						<h4>Education History (2)</h4>
						<input class = "input" type = "text" placeholder = "School Name" value="<%-data[0].edschool[1]%>">
						<input class = "input" type = "text" placeholder = "Grade Point Average" value="<%-data[0].edgpa[1]%>">
						<input class = "input" type = "date" placeholder = "Graduation Date" value="<%-data[0].edgrad[1]%>">
						<hr>
					</div>
					
					<div id="education-history-3" style="display:none;">
						<h4>Education History (3)</h4>
						<input class = "input" type = "text" placeholder = "School Name" value="<%-data[0].edschool[2]%>">
						<input class = "input" type = "text" placeholder = "Grade Point Average" value="<%-data[0].edgpa[2]%>">
						<input class = "input" type = "date" placeholder = "Graduation Date" value="<%-data[0].edgrad[2]%>">
						<hr>
					</div>
					
					<div id="education-history-4" style="display:none;">
						<h4>Program Highlights</h4>
						<input class = "input" type = "text" placeholder = "School Name">
						<input class = "input" type = "text" placeholder = "Grade Point Average">
						<input class = "input" type = "text" placeholder = "Graduation Date">
						<hr>
					</div>
					
					<h3>Employment History</h3>
					
					<div class="tab-button-container">
						<button id="employment-button-1" type="button" class="tab-button active" onclick="change_employment(1);">Employment History 1</button>
						<button id="employment-button-2" type="button" class="tab-button" onclick="change_employment(2);">Employment History 2</button>
						<button id="employment-button-3" type="button" class="tab-button" onclick="change_employment(3);">Employment History 3</button>
					</div>
					
					<div id="employment-history-1" style="display:block;">
						<h4>Employment History (1)</h4>
						<input class = "input" type = "text" placeholder = "Title">
						<input class = "input" type = "text" placeholder = "Company">
						<textarea class = "input" type = "text" placeholder = "Description"></textarea>
						<input class = "input" type = "date" placeholder = "Start Date">
						<input class = "input" type = "date" placeholder = "End Date">
						<hr>
					</div>
					
					<div id="employment-history-2" style="display:none;">
						<h4>Employment History (2)</h4>
						<input class = "input" type = "text" placeholder = "Title">
						<input class = "input" type = "text" placeholder = "Company">
						<textarea class = "input" type = "text" placeholder = "Description"></textarea>
						<input class = "input" type = "date" placeholder = "Start Date">
						<input class = "input" type = "date" placeholder = "End Date">
						<hr>
					</div>
					
					<div id="employment-history-3" style="display:none;">
						<h4>Employment History (3)</h4>
						<input class = "input" type = "text" placeholder = "Title">
						<input class = "input" type = "text" placeholder = "Company">
						<textarea class = "input" type = "text" placeholder = "Description"></textarea>
						<input class = "input" type = "date" placeholder = "Start Date">
						<input class = "input" type = "date" placeholder = "End Date">
						<hr>
					</div>
					
					<button class = "apply-button">Apply</button>
				</form>
			</div>
		</div>
		
    </div>

<% include ../partials/footer %>